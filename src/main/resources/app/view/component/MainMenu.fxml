            <MenuItem fx:id="btnPlansManagement" mnemonicParsing="false" onAction="#handleOnActionButtonPlansManagement" text="Gestão de Planos" styleClass="button-menu-item"/>
            <MenuItem fx:id="btnCatalogManagement" mnemonicParsing="false" onAction="#handleOnActionButtonCatalog" text="Gestão de serviços" styleClass="button-menu-item"/>
        </items>
    </MenuButton>
    <Button fx:id="btnUsers" layoutX="917.0" layoutY="14.0" onAction="#handleOnActionButtonUsers" styleClass="button-menu" text="Gestão de pessoal" />
</AnchorPane>
